{# Structured, JD- and company-aware cover letter #}
{%- set company = (job.company or '') | trim -%}
{%- set contact = (plan.greeting_name or 'Hiring Manager') | trim -%}

Dear {{ contact }}{% if company %} at {{ company }}{% endif %},

{{ plan.intro }}

{%- if plan.evidence and plan.evidence|length > 1 -%}
{% for para in plan.evidence %}
{{ para }}
{% endfor %}
{%- elif plan.evidence and plan.evidence|length == 1 -%}
{{ plan.evidence[0] }}
{%- endif %}

{{ plan.why_company }}

{{ plan.closing }}

{{ plan.signoff }},
{{ profile.full_name or '' }}
{%- if profile.email or profile.phone %}
{{ profile.email or '' }}{% if profile.email and profile.phone %} | {% endif %}{{ profile.phone or '' }}
{%- endif %}
{%- if profile.github %}
GitHub: {{ profile.github }}
{%- endif %}
